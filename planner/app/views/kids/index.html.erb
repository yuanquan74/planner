<h1>Listing kids</h1>

<table>
  <tr>
    <th>Family</th>
    <th>Name</th>
    <th>Birthday</th>
    <th>School</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @kids.each do |kid| %>
  <tr>
    <td><%= kid.family.last_name %></td>
    <td><%= kid.name %></td>
    <td><%= kid.birthday %></td>
    <td><%= kid.school.name %></td>
    <td><%= link_to 'Show', kid %></td>
    <td><%= link_to 'Edit', edit_kid_path(kid) %></td>
    <td><%= link_to 'Destroy', kid, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

