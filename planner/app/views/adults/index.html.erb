  </tr>

<% @adults.each do |adult| %>
  <tr>
    <td><%= adult.family.last_name %></td>
    <td><%= adult.name %></td>
    <td><%= adult.email %></td>
    <td><%= adult.drive %></td>
    <td><%= adult.driver_license %></td>
    <td><%= adult.seats %></td>
    <td><%= link_to 'Show', adult %></td>
    <td><%= link_to 'Edit', edit_adult_path(adult) %></td>
    <td><%= link_to 'Destroy', adult, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

