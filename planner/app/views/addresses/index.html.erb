<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>Address type</th>
    <th>Address catalog</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.name %></td>
    <td><%= address.address %></td>
    <td><%= address.address_type.name %></td>
    <td><%= address.address_catalog.name %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, :method => :delete, :data => { :confirm => 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

